{
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "allowJs": false,
    "pretty": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "rootDir": "src",
    "declaration": true,
    "baseUrl": ".",
    "target": "es2020",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "allowUnreachableCode": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "lib": [
      "es2018",
      "es2019",
      "es2020",
      "es2021"
    ]
  },
  "compileOnSave": false,
  "include": [
    "src"
  ]
}
